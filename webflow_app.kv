<MainLayout>:
    orientation: "vertical"
    padding: 10
    spacing: 10

    ScrollView:
        BoxLayout:
            orientation: "vertical"
            size_hint_y: None
            height: self.minimum_height
            spacing: 5

            Label:
                text: "Name"
            TextInput:
                id: name
                multiline: False

            Label:
                text: "Slug"
            TextInput:
                id: slug
                multiline: False

            Label:
                text: "Color"
            TextInput:
                id: color
                multiline: False

            Label:
                text: "Size"
            TextInput:
                id: size
                multiline: False

            Label:
                text: "Price"
            TextInput:
                id: price
                multiline: False

            Label:
                text: "Kota"
            TextInput:
                id: kota
                multiline: False

            Label:
                text: "Deskripsi"
            TextInput:
                id: deskripsi
                multiline: True

            Label:
                text: "Pengirim"
            TextInput:
                id: pengirim
                multiline: False

            Label:
                text: "Link Rintisan"
            TextInput:
                id: linkrintisan
                multiline: False

            # Preview & Label gambar
            BoxLayout:
                orientation: "horizontal"
                spacing: 10

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        id: img1_label
                        text: "Belum ada file"
                    Image:
                        id: img1_preview
                        size_hint_y: None
                        height: 150
                    Button:
                        text: "Pilih img1"
                        on_press: root.choose_file("img1")

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        id: img2_label
                        text: "Belum ada file"
                    Image:
                        id: img2_preview
                        size_hint_y: None
                        height: 150
                    Button:
                        text: "Pilih img2"
                        on_press: root.choose_file("img2")

                BoxLayout:
                    orientation: "vertical"
                    Label:
                        id: img3_label
                        text: "Belum ada file"
                    Image:
                        id: img3_preview
                        size_hint_y: None
                        height: 150
                    Button:
                        text: "Pilih img3"
                        on_press: root.choose_file("img3")

            Button:
                text: "Load Item"
                on_press: root.load_items()
            Button:
                text: "Update Item"
                on_press: root.update_item()

            Label:
                id: status
                text: "Status: Idle"
